{
  "manifest_version": 3,
  "name": "Send WhatsApp",
  "description": "Send a whatsapp message any number that is not in your phone book",
  "version": "0.1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon_128.png",
    "128": "icon_128.png",
    "256": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "contextMenus"
  ]
}